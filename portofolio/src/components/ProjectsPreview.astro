---
import type { CollectionEntry } from 'astro:content';

interface Props {
	project: CollectionEntry<'projects'>;
}

const { data, id } = Astro.props.project;
---

<a class="card" href={`/projects/${id}`}>
	<span class="title">{data.title}</span>
	<img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" />
</a>

<style>
	.card {
    position: relative;
    display: grid;
    grid-template: auto 1fr / auto 1fr;
    height: 12rem;
    background: var(--gradient-subtle, linear-gradient(135deg, #1a1a1a, #2a2a2a));
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    font-family: var(--font-brand, sans-serif);
    font-size: var(--text-lg, 1.125rem);
    font-weight: 600;
    transition: transform 0.2s ease, box-shadow var(--theme-transition, 0.2s);
  }

  .card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md, 0 10px 15px rgba(0,0,0,0.2));
  }

  .card:focus-visible {
    outline: 2px solid var(--gray-100);
    outline-offset: 2px;
  }

  .title {
    grid-area: 1 / 1 / 2 / 2;
    z-index: 2;
    margin: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--gray-950, rgba(0, 0, 0, 0.75));
    color: var(--gray-100, #fff);
    border-radius: 0.5rem;
    backdrop-filter: blur(6px);
    font-size: 1rem;
  }

  img {
    grid-area: 1 / 1 / 3 / 3;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.2s ease;
  }

  .group:hover img {
    transform: scale(1.05);
  }

  @media (min-width: 50em) {
    .card {
      height: 20rem;
      border-radius: 1rem;
    }

    .title {
      font-size: 1.25rem;
      border-radius: 0.75rem;
    }
  }
</style>
